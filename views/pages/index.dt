extends outer

block inner
	section.Body.Capsule.Articles
		h1 Le blog
		include blocks/aside
		.articles
			- foreach (post; posts)
				article.article
					header
						h2.title
							a(href='/posts/!{ post.relative_url }') !{ post.title }
					.content
						div !{ post.html_intro }
					footer
						.posted !{ post.pretty_date }
